{% if works %}
	<ul class="grid cs-style-2">
		{% for work in works %}
		
			<div class="col-md-3 col-sm-6">
				<figure>
					<img src="{{ asset('uploads/images/works/'~work.imageName) }}" alt="{{work.imageName}}">
					<figcaption>
						<h3>{{work.name.getContent(app.request.locale) | slice(0, 10)}}</h3>
						<span>{{work.client.username}}</span>
						<a href="{{ path('app_work_show', {'id': work.id, 'slug':work.slug}) }}">{% trans %}take_a_look{% endtrans %}</a>
					</figcaption>
				</figure>
			</div>
		
		{% endfor %}
	</ul>
{% endif %}