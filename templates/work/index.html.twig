

            <ul class="grid cs-style-3">
                
                {% if works %}
                    {% for work in works %}
                        <div class="col-md-4 col-sm-6">
                            <figure>
                                <img src="{{ asset('uploads/images/works/'~work.imageName) }}" alt="{{work.imageName}}">
                                <figcaption>
                                    <h3>{{ work.name.getContent(app.request.locale) }}</h3>
                                    <span>{{ work.client.username }}</span>
                                    <a href="{{path('app_work_show', {id : work.id}) }}">{% trans %}take_a_look{% endtrans %}</a>
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}
                {% endif %}
            </ul>