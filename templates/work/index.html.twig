<!-- Our Portfolio -->

<div class="section section-white">
    <div class="container">
        <div class="row">
            
            <div class="section-title">
                <h1>{% trans %}our_recent_works{% endtrans %}</h1>
            </div>
            
            
            <ul class="grid cs-style-3">
                
                {% if works %}
                    {% for work in works %}
                        <div class="col-md-4 col-sm-6">
                            <figure>
                                <img src="{{ asset('uploads/images/works/'~work.imageName) }}" alt="{{work.imageName}}">
                                <figcaption>
                                    <h3>{{ work.name.getContent(app.request.locale) }}</h3>
                                    <span>{{ work.client.username }}</span>
                                    <a href="{{path('app_work_show', {id : work.id}) }}">{% trans %}take_a_look{% endtrans %}</a>
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>
</div>
<!-- Our Portfolio -->
